# 1. Сделать хеш, содеращий месяцы и количество дней в месяце. В цикле выводить те месяцы, у которых количество дней ровно 30
month = {"январь" => 31, "февраль" => 28, "март" => 31, "апрель" => 30, "май" => 31, "июнь" => 30, "июль" => 31, "август" => 31, "сентябрь" => 30, "октябрь" => 31, "ноябрь" => 30, "декабрь" => 31}
for i+1 in month.size do
  if i and month.values[i] == 30 do
  puts month.keys[i]
  end
  i =+ 1
  
  
  
